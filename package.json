{
  "name": "rheactor-web-app",
  "description": "Contains the building blocks for a web application",
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "environment=testing mocha --reporter=dot --timeout=1350 test/\\*\\*/\\*.js",
    "test:coverage": "environment=testing istanbul cover _mocha --report lcovonly -- -R dot --timeout=1350 test/\\*\\*/\\*.js && cat ./coverage/lcov.info | codacy-coverage && rm -rf ./coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ResourcefulHumans/rheactor-web-app.git"
  },
  "author": "Resourceful Humans <info@resourceful-humans.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ResourcefulHumans/rheactor-web-app/issues"
  },
  "homepage": "https://github.com/ResourcefulHumans/rheactor-web-app#readme",
  "dependencies": {
    "bluebird": "^3.4.6",
    "bootstrap": "^4.0.0-alpha.5",
    "compare-versions": "^3.0.0",
    "event-source-polyfill": "0.0.7",
    "ghooks": "^1.3.2",
    "lodash": "^4.15.0",
    "rheactor-value-objects": "^3.0.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "codacy-coverage": "^2.0.0",
    "ghooks": "^1.2.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.1.2",
    "mocha-lcov-reporter": "^1.2.0",
    "semantic-release": "^6.3.2",
    "standard": "^8.4.0",
    "validate-commit-msg": "^2.8.2"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg"
    }
  }
}
